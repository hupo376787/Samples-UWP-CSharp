<UserControl x:Class="Navigator.RT.Splash.StiSplashControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel Width="620" VerticalAlignment="Center">
            <Image Source="../Assets/SplashScreen.png" Stretch="None"/>
            <ProgressRing Style="{StaticResource StiProgressRingStyle}"/>
        </StackPanel>
        <StackPanel x:Name="panelProgress" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30,0,0,100"/>
    </Grid>
</UserControl>