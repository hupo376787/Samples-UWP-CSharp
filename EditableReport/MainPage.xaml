<Page x:Class="EditableReport.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewer="using:Stimulsoft.Report.Viewer.UWP">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Name="btSave" MinWidth="125" Content="Save" Click="btSave_Click"/>
            <Button Name="btLoad" MinWidth="125" Content="Load" Click="btLoad_Click"/>
        </StackPanel>
        <viewer:StiViewerControl x:Name="viewerCotnrol" Grid.Row="1"/>
    </Grid>
</Page>