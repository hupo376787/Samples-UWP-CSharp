      <ReturnDescription>A TimeSpan value.</ReturnDescription>
      <ArgumentType>System.DateTime</ArgumentType>
      <ArgumentType>System.DateTime</ArgumentType>
      <ArgumentName>date1</ArgumentName>
      <ArgumentName>date2</ArgumentName>
      <ArgumentDescription>date1 is the first DateTime value used in calculating the difference.</ArgumentDescription>
      <ArgumentDescription>date2 is the first DateTime value used in calculating the difference.</ArgumentDescription>
    </Function>
