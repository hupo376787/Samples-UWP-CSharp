<Page x:Class="WorkWithComponents.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewer="using:Stimulsoft.Report.Viewer.UWP">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="4">
            <TextBox Name="textBox1" Width="400" Height="60" Margin="4" Text="Sample Text"/>
            <Button Name="btPreview" Margin="4" Width="140" Content="Preview" Click="btPreview_Click"/>
        </StackPanel>

        <viewer:StiViewerControl x:Name="viewerCotnrol" Grid.Row="1"/>
    </Grid>
</Page>